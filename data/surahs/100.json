    "verses": [
      {
        "arabic_text": "بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّح۪يمِ",
        "turkish_text": "Rahmeti Bol ve Kesintisiz Olan Allah'ın Adıyla",
        "index_number": 0,
        "deep_notes": []
      },
      {
        "arabic_text": "وَالْعَـادِيَاتِ ضَبْـحاًۙ",
        "turkish_text": "Soluk soluğa koşanlara ant olsun,",
        "index_number": 1,
        "deep_notes": []
      },
      {
        "arabic_text": "فَالْمُـورِيَاتِ قَـدْحاًۙ",
        "turkish_text": "Çarparak ateş çıkaranlara,",
        "index_number": 2,
        "deep_notes": []
      },
      {
        "arabic_text": "فَالْمُغ۪يرَاتِ صُبْحاًۙ",
        "turkish_text": "Sabahleyin akın edenlere,",
        "index_number": 3,
        "deep_notes": []
      },
      {
        "arabic_text": "فَاَثَرْنَ بِه۪ نَقْعاًۙ",
