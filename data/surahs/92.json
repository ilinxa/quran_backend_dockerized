    "verses": [
      {
        "arabic_text": "بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّح۪يمِ",
        "turkish_text": "Rahmeti Bol ve Kesintisiz Olan Allah'ın Adıyla",
        "index_number": 0,
        "deep_notes": []
      },
      {
        "arabic_text": "وَالَّيْلِ اِذَا يَغْشٰىۙ",
        "turkish_text": "Örttüğü zaman geceye ant olsun.",
        "index_number": 1,
        "deep_notes": []
      },
      {
        "arabic_text": "وَالنَّهَارِ اِذَا تَجَلّٰىۙ",
        "turkish_text": "Ortaya çıktığı zaman gündüze,",
        "index_number": 2,
        "deep_notes": []
      },
      {
        "arabic_text": "وَمَا خَلَقَ الذَّكَرَ وَالْاُنْثٰىۙ",
        "turkish_text": "Erkeği ve dişiyi yaratana,",
        "index_number": 3,
        "deep_notes": []
      },
      {
        "arabic_text": "اِنَّ سَعْيَكُمْ لَشَتّٰىۜ",
        "turkish_text": "Çabalarınız çeşit çeşittir.",
        "index_number": 4,
        "deep_notes": []
      },
      {
        "arabic_text": "فَاَمَّا مَنْ اَعْطٰى وَاتَّقٰىۙ",
        "turkish_text": "Fakat kim verir ve takvâ sahibi olursa,",
        "index_number": 5,
        "deep_notes": []
      },
      {
        "arabic_text": "وَصَدَّقَ بِالْحُسْنٰىۙ",
        "turkish_text": "En iyiyi doğrularsa,",
        "index_number": 6,
        "deep_notes": []
      },
      {
        "arabic_text": "فَسَنُيَسِّرُهُ لِلْيُسْرٰىۜ",
        "turkish_text": "Ona en kolayı(1) kolaylaştıracağız.",
        "index_number": 7,
        "deep_notes": [
          {
            "key_word": "1",
            "index_number": 1,
            "note": "1- Cennet'i."
          }
        ]
      },
      {
        "arabic_text": "وَاَمَّا مَنْ بَخِلَ وَاسْتَغْنٰىۙ",
        "turkish_text": "Fakat kim cimrilik eder de kendisini müstağni(1) görürse,",
        "index_number": 8,
        "deep_notes": [
          {
            "key_word": "1",
            "index_number": 1,
            "note": "1- Kendisini yeterli gören, büyüklenen, kibirlenen."
          }
        ]
      },
      {
        "arabic_text": "وَكَذَّبَ بِالْحُسْنٰىۙ",
        "turkish_text": "En iyiyi yalanlarsa,",
        "index_number": 9,
        "deep_notes": []
      },
      {
        "arabic_text": "فَسَنُيَسِّرُهُ لِلْعُسْرٰىۜ",
        "turkish_text": "Ona en zoru(1) kolaylaştıracağız.",
        "index_number": 10,
        "deep_notes": [
          {
            "key_word": "1",
            "index_number": 1,
            "note": "1- Cehennem'i."
          }
        ]
      },
      {
        "arabic_text": "وَمَا يُغْن۪ي عَنْهُ مَالُـهُٓ اِذَا تَرَدّٰىۜ",
        "turkish_text": "Düştüğü(1) zaman malı ona yarar sağlamaz.",
        "index_number": 11,
        "deep_notes": [
          {
            "key_word": "1",
            "index_number": 1,
            "note": "1- Helâk olduğu, çukura yuvarlandığı, öldüğü, Cehennem'e yuvarlandığı."
          }
        ]
      },
      {
        "arabic_text": "اِنَّ عَلَيْنَا لَلْهُدٰىۘ",
        "turkish_text": "Kuşkusuz doğru yolu göstermek Biz'e aittir.",
        "index_number": 12,
        "deep_notes": []
      },
      {
        "arabic_text": "وَاِنَّ لَنَا لَلْاٰخِرَةَ وَالْاُو۫لٰى",
        "turkish_text": "Kuşkusuz ilk(1) de son(1) da Bizimdir.",
        "index_number": 13,
        "deep_notes": [
          {
            "key_word": "1",
            "index_number": 1,
            "note": "1- Dünyada âhirette."
          }
        ]
      },
      {
        "arabic_text": "فَاَنْذَرْتُكُمْ نَاراً تَلَظّٰىۚ",
        "turkish_text": "Alev saçan bir ateşe karşı sizi uyardım.",
        "index_number": 14,
        "deep_notes": []
      },
      {
        "arabic_text": "لَا يَصْلٰيهَٓا اِلَّا الْاَشْقٰىۙ",
        "turkish_text": "Ona şâki(1) olandan başkası girmez.",
        "index_number": 15,
        "deep_notes": [
          {
            "key_word": "1",
            "index_number": 1,
            "note": "1- İflah olmaz azgın."
          }
